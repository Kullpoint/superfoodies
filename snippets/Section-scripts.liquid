<script>
    {% assign sectionName = name %}
    {% assign sectionScript = sectionName | append: '.js' %}
    if (!document.querySelector(`[data-section-script="{{ sectionName }}"]`)) {
        const scriptTag = document.createElement('script');
        scriptTag.setAttribute('type', 'module');
        scriptTag.setAttribute('src', '{{ sectionScript | asset_url }}');
        scriptTag.setAttribute('data-section-script', '{{ sectionName }}')
        document.body.append(scriptTag);
    }
</script>
