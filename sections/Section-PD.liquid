{% liquid
    render 'Section-styles', name: 'section-pd'
    render 'Section-scripts', name: 'section-pd'
%}

<style>
    #shopify-section-{{ section.id }} .section-pd {
        padding-top: {{ section.settings.padding-top }}px;
        padding-bottom: {{ section.settings.padding-bottom }}px;
    }

    @media screen and (max-width: 768px) {
        #shopify-section-{{ section.id }} .section-pd {
            padding-top: 25px;
            padding-bottom: 50px;
        }
    }
</style>

<section class="section-pd" data-product-description-section="{{ section.id }}">
    <div class="section-pd__wrapper">
        <h2 class="section-pd__title">{{ section.settings.title }}</h2>
        <div class="section-pd__short-description" data-short-description>{{ section.settings.description | truncate: 740 }}</div>
        <div class="section-pd__description dn" data-description>{{ section.settings.description }}</div>
        <div class="section-pd__showmore" data-showmore-btn>MEER LEZEN {% render 'Chevrons', direction: 'down' %}</div>
        <div class="section-pd__showless dn" data-showless-btn>VARSTOPPEN {% render 'Chevrons', direction: 'down' %}</div>
    </div>
</section>

{% schema %}
    {
        "name": "Product description",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Productbeschrijving"
            },
            {
                "type": "richtext",
                "id": "description",
                "label": "Default description",
                "info": "This description will be shown when product doesn't have a description"
            },
            {
                "type": "range",
                "id": "padding-top",
                "min": 0,
                "max": 200,
                "step": 5,
                "unit": "px",
                "label": "Padding top",
                "default": 70
            },
            {
                "type": "range",
                "id": "padding-bottom",
                "min": 0,
                "max": 200,
                "step": 5,
                "unit": "px",
                "label": "Padding bottom",
                "default": 70
            }
        ]
    }
{% endschema %}
