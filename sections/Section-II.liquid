{% liquid
    render 'Section-styles', name: 'section-ii'
%}

{% comment %} render 'Section-scripts', name: 'section-ii' {% endcomment %}

<style>
    .section-ii {
        padding-top: {{ section.settings.padding-top }}px;
        padding-bottom: {{ section.settings.padding-bottom }}px;
    }
</style>

<section class="section-ii">
    <div class="section-ii__wrapper">
        {% for block in section.blocks %}
            {% assign infoItem = block.settings %}
            <div class="section-ii__item">
                <div class="icon">{{ infoItem.icon }}</div>
                <div class="title">{{ infoItem.title }}</div>
            </div>
        {% endfor %}
    </div>
</section>

{% schema %}
    {
        "name": "Info items section",
        "settings": [
            {
                "type": "range",
                "id": "padding-top",
                "min": 0,
                "max": 200,
                "step": 5,
                "unit": "px",
                "label": "Padding top",
                "default": 50
            },
            {
                "type": "range",
                "id": "padding-bottom",
                "min": 0,
                "max": 200,
                "step": 5,  
                "unit": "px",
                "label": "Padding bottom",
                "default": 35
            }
        ],
        "blocks": [
            {
                "name": "Info item",
                "type": "block",
                "limit": 4,
                "settings": [
                    {
                        "type": "textarea",
                        "id": "icon",
                        "label": "Icon",
                        "info": "Put an svg icon code here"
                    },
                    {
                        "type": "textarea",
                        "id": "title",
                        "label": "Title"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Info items section",
                "settings": {

                }
            }
        ]
    }
{% endschema %}
