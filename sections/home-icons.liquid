<section class="h-icons section" data-section-id="{{ section.id }}" data-section-type="h-icons">
  <div class="container">
    <div class="section-title-2 h-icons__title">
      {{ section.settings.title }}
    </div>
    <div class="h-icons__list">
      {% for block in section.blocks %}
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" class="h-icons__item">
        {% else %}
          <div class="h-icons__item">
        {% endif %}
          <div class="h-icons__image-wrap">
            <img src="{{ block.settings.icon | img_url: '30x' }}" data-src="{{ block.settings.icon | img_url: '80x' }}" alt="" class="lazyload h-icons__icon">
          </div>
          <div class="h-icons__item-title">
            {{ block.settings.title }}
          </div>
        {% if block.settings.link == blank %}
          </div>
        {% else %}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Icons titles",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Collections",
      "name": "Icons titles"
    }
  ]
}
{% endschema %}
