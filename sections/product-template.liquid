{%- capture section_settings -%}
{
  "showShippingEstimator": {% if template == 'product.quick-view' or product.available == false %}false{% else %}{{ section.settings.show_shipping_estimator | json }}{% endif %},
  "showQuantitySelector": {{ section.settings.show_quantity_selector | json }},
  "showPaymentButton": {{ section.settings.show_payment_button | json }},
  "showInventoryQuantity": {% if product.template_suffix != 'pre-order' %}{{ section.settings.show_inventory_quantity | json }}{% else %}false{% endif %},
  "lowInventoryThreshold": {{ section.settings.low_inventory_threshold | json }},
  "galleryTransitionEffect": {{ section.settings.carousel_effect | json }},
  "enableImageZoom": {% if template == 'product.quick-view' %}false{% else %}{{ section.settings.enable_image_zoom | json }}{% endif %},
  "zoomEffect": {{ section.settings.zoom_effect | json }},
  "enableVideoLooping": {{ section.settings.enable_video_looping | json }},
  "productOptions": {{ product.options | json | escape }},
  "enableHistoryState": {% if template == 'product.quick-view' %}false{% else %}true{% endif %},
  "infoOverflowScroll": {% if template == 'product.quick-view' %}false{% else %}true{% endif %},
  "isQuickView": {% if template == 'product.quick-view' %}true{% else %}false{% endif %}
}
{%- endcapture -%}

{%- assign selected_variant = product.selected_or_first_available_variant -%}


<section data-section-id="{{ section.id }}" data-section-type="product" data-section-settings='{{ section_settings }}'>
  <div class="container">
    <div class="breadcrumb-wrapper">
      <nav aria-label="{{ 'general.breadcrumb.title' | t }}" class="breadcrumb">
        <ol class="breadcrumb__list">
          <li class="breadcrumb__item">
            <a class="breadcrumb__link link" href="{{ routes.root_url }}">{{ 'general.breadcrumb.home' | t }}</a>
            <div class="breadcrumb-split">
              /
            </div>
          </li>

          <li class="breadcrumb__item">
            {%- if collection -%}
              <a class="breadcrumb__link link" href="{{ collection.url }}">{{ collection.title }}</a>
              <div class="breadcrumb-split">
                /
              </div>
            {%- else -%}
              <a class="breadcrumb__link link" href="{{ routes.all_products_collection_url }}">{{- 'collection.general.all_products' | t -}}</a>
              <div class="breadcrumb-split">
                /
              </div>
            {%- endif -%}
          </li>

          <li class="breadcrumb__item">
            <span class="breadcrumb__link" aria-current="page">{{ product.title }}</span>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="product__gallery">
          <div class="product__gallery-big">
            {% for image in product.images %}
              <img class="lazyload" src="{{ image | img_url: '50x' }}" data-src="{{ image | img_url: '1200x1200', crop: 'center' }}" alt="" >
            {% endfor %}
          </div>
          <div class="product__gallery-small">
            {% for image in product.images %}
              <div>
                <img class="lazyload" src="{{ image | img_url: '20x' }}" data-src="{{ image | img_url: '160x160', crop: 'center' }}" alt="">
              </div>
            {% endfor %}
          </div>
        </div>
        {% if product.metafields.tabs.tab_title != blank %}
          <div class="product__tabs d-none d-md-block">
            {% for tab_title in product.metafields.tabs.tab_title %}
              <div class="product__tab{% if forloop.index0 == 0 or forloop.index0 == 1 %} active{% endif %}">
                <div class="product__tab-title">
                  {{ tab_title }} {%- render 'icon', icon: 'arrow-bottom' -%}
                </div>
                <div class="product__tab-content"{% if forloop.index0 == 0 or forloop.index0 == 1 %} style="display: block;"{% endif %}>
                  {{ product.metafields.tabs.tab_content[forloop.index0] }}
                </div>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      <div class="col-12 col-md-6 product__info">
        <div class="product__header">
          <span class="product__title">
            {{ product.title }}
          </span>
          {% if product.available %}
            <span class="product__stock product__stock--in">
            {% render 'icon', icon: 'check-3' %} {{ 'collection.product.in_stock' | t }}
            </span>
          {% else %}
            <span class="product__stock product__stock--out">
            {{ 'collection.product.sold_out' | t }}
          </span>
          {% endif %}
        </div>

        {%- if settings.show_reviews_badge -%}
        <div class="wc_product_review_badge" data-handle="{{ product.handle }}" data-product_id="{{ product.id }}"></div>
        
        {% comment %} <div class="product-item__reviews-badge">
          <!-- <span class="spr-badge">
            <span class="spr-starrating spr-badge-starrating">
              <i class="spr-icon spr-icon-star-empty"></i>
              <i class="spr-icon spr-icon-star-empty"></i>
              <i class="spr-icon spr-icon-star-empty"></i>
              <i class="spr-icon spr-icon-star-empty"></i>
              <i class="spr-icon spr-icon-star-empty"></i>
            </span>
            <span class="spr-badge-caption">No reviews</span>
          </span> -->


          <div id="star-rating"></div>
          <script type="text/javascript" src="//widgets.trustedshops.com/reviews/tsSticker/tsProductStickerSummary.js"></script>
          <script> 
            var summaryBadge = new productStickerSummary();
            summaryBadge.showSummary(
              {
                'tsId': 'X95D5DAE9D91571D005D963C07967266A',
                'sku': ['{{ selected_variant.sku }}'],
                'element': '#star-rating',
                'starColor' : '#ED6B0B',
                'starSize' : '15px',
