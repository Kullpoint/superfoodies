{% liquid
    render 'Section-styles', name: 'section-article'
    render 'Section-scripts', name: 'section-article'
%}

<style>
    .section-article {
        margin-top: {{ section.settings.margin-top }}px;
        margin-bottom: {{ section.settings.margin-bottom }}px;
    }


</style>

<section class="section-article">
    <div class="section-article__wrapper">
       <div class="section-article__image-wrapper">
            <img class="section-article__image" src="{{ article.image | image_url }}" alt="{{ article.image.src }}" loading="lazy" width="{{ article.image.width }}" height="{{ article.image.height }}">
       </div>
       <div class="section-article__text">
        <div class="section-article__text-inner">
            <h1 class="section-article__titile">{{ article.title }}</h1>
            <div class="section-article__info">
                <div class="section-article__date">
                    <h6>{{ article.tags[0] }}</h6>
                    {% render 'Icon-blog-date-star' %}
                    <h6>{{ article.published_at | date: "%b. %d, %Y" }}</h6>
                </div>
                <div class="section-article__social">
                    <h6>Delen:</h6>
                    <ul>
                        <a href="">
                            {% render 'Icon-facebook' %}
                        </a>
                        <a href="">
                            {% render 'Icon-twitter' %}
                        </a>
                        <a href="">
                            {% render 'Icon-pinterest' %}
                        </a>
                        <a href="">
                            {% render 'Icon-telegram' %}
                        </a>
                    </ul>
                </div>
            </div>
            <div class="section-article__description">
                {{ article.content }}
            </div>
            <div class="section-article__info">
                <div class="section-article__date">
                    <h6>{{ article.tags[0] }}</h6>
                    {% render 'Icon-blog-date-star' %}
                    <h6>{{ article.published_at | date: "%b. %d, %Y" }}</h6>
                </div>
                <div class="section-article__social">
                    <h6>Delen:</h6>
                    <ul>
                        <a href="">
                            {% render 'Icon-facebook' %}
                        </a>
                        <a href="">
                            {% render 'Icon-twitter' %}
                        </a>
                        <a href="">
                            {% render 'Icon-pinterest' %}
                        </a>
                        <a href="">
                            {% render 'Icon-telegram' %}
                        </a>
                    </ul>
                </div>
            </div>
        </div>
       </div>
    </div>
</section>

{% schema %}
    {
        "name": "Article template",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Mijn winkelmandje"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Description",
                "info": "Use <br> to break a line"
            },
            {
                "type": "range",
                "id": "margin-top",
                "min": 0,
                "max": 200,
                "step": 5,
                "unit": "px",
                "label": "Margin top",
                "default": 120
            },
            {
                "type": "range",
                "id": "margin-bottom",
                "min": 0,
                "max": 200,
                "step": 5,
                "unit": "px",
                "label": "Margin bottom",
                "default": 45
            }
        ],
        "blocks": [
            {
                "name": "Item",
                "type": "block",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "item-logo",
                        "label": "Partner logo"
                    },
                    {
                        "type": "url",
                        "id": "item-url",
                        "label": "Partner link"
                    }
                ]
            }
        ],
        "presets": [
        ]
    }
{% endschema %}
